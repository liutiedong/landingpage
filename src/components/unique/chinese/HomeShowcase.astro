      </div>
    ))}
  </div>

  <!-- Third row: Moves to the right -->
  <div class="reviews-container flex gap-6 scroll-right-show mt-5">
    {questionsRow3.map((question) => (
      <div class="review-card bg-white p-6 rounded-lg shadow-md min-w-[300px] mb-5"
      onmouseover="this.parentElement.style.animationPlayState='paused'" 
      onmouseout="this.parentElement.style.animationPlayState='running'">
