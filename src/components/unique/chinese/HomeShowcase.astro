<section id="example-questions" class="reviews-section">
  <!-- <h2 class="text-subtitle text-center mb-5">
    Example Tasks You Can Ask
  </h2> -->

  <!-- First row: Moves to the right -->
  <div class="reviews-container flex gap-6 scroll-right-show">
    {questionsRow1.map((question) => (
      <div class="review-card bg-white p-6 rounded-lg shadow-md min-w-[300px] mb-5"
            onmouseover="this.parentElement.style.animationPlayState='paused'" 
            onmouseout="this.parentElement.style.animationPlayState='running'">
        <p class="block">{question}</p>
      </div>
    ))}
  </div>

  <!-- Second row: Moves to the left -->
  <div class="reviews-container flex gap-6 scroll-left-show mt-5">
    {questionsRow2.map((question) => (
      <div class="review-card bg-white p-6 rounded-lg shadow-md min-w-[300px] mb-5"
      onmouseover="this.parentElement.style.animationPlayState='paused'" 
      onmouseout="this.parentElement.style.animationPlayState='running'">
