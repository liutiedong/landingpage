---
import Logo from "@reusable/atoms/Logo.astro";
import Wrapper from "@reusable/atoms/Wrapper.astro";
import Licence from "../../../reusable/atoms/Licence.astro";
import UpdateTime from "../../reusable/atoms/UpdateTime.astro";
---

<footer class="bg-zinc-900 border-neutral-600 p-4 pt-16 border-t-[1px]">
    <Wrapper>
        <div class="flex gap-4 flex-wrap items-end sm:justify-between">
            <div>
                <Logo/>
                <div class="footer-links flex justify-center space-x-4">
                    <a href="/terms-of-use" class="hover:text-white">使用条款</a>
                    <span>|</span>
                    <a href="/privacy-policy" class="hover:text-white">隐私政策</a>
                </div>
                <span class="block mb-1 text-sm"></span> 
                <span class="block opacity-50 text-xs">© 2024 Altair X. 保留所有权利。</span>
            </div>
            <span class="block text-sm">
                一条指令，无限可能 <img class="inline-block w-6" src="/resource/svg/heart.svg" alt="心形图标"/>
                <UpdateTime/>
            </span>
        </div>
    </Wrapper>
</footer>