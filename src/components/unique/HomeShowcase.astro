---

<section id="example-questions" class="reviews-section">
  <!-- <h2 class="text-subtitle text-center mb-5">
    Example Tasks You Can Ask
  </h2> -->

  <!-- First row: Moves to the right -->
  <div class="reviews-container flex gap-6 scroll-right-show">
    {questionsRow1.map((question) => (
      <div class="review-card bg-white p-6 rounded-lg shadow-md min-w-[300px] mb-5"
            onmouseover="this.parentElement.style.animationPlayState='paused'" 
            onmouseout="this.parentElement.style.animationPlayState='running'">
        <p class="block">{question}</p>
      </div>
    ))}
  </div>

  <!-- Second row: Moves to the left -->
  <div class="reviews-container flex gap-6 scroll-left-show mt-5">
    {questionsRow2.map((question) => (
      <div class="review-card bg-white p-6 rounded-lg shadow-md min-w-[300px] mb-5"
      onmouseover="this.parentElement.style.animationPlayState='paused'" 
      onmouseout="this.parentElement.style.animationPlayState='running'">
        <p class="block">{question}</p>
      </div>
    ))}
  </div>

  <!-- Third row: Moves to the right -->
  <div class="reviews-container flex gap-6 scroll-right-show mt-5">
    {questionsRow3.map((question) => (
      <div class="review-card bg-white p-6 rounded-lg shadow-md min-w-[300px] mb-5"
      onmouseover="this.parentElement.style.animationPlayState='paused'" 
      onmouseout="this.parentElement.style.animationPlayState='running'">
        <p class="block">{question}</p>
      </div>
    ))}
  </div>
</section>

<style>
  /* Reviews section should take the full width of the viewport */
  .reviews-section {
    position: relative;
    width: 100vw;
    overflow: hidden;
    padding: 0;
    margin: 0;
    left: 50%;
    transform: translateX(-50%);
    margin-bottom: 50px;
    margin-top: 0px;
  }

  /* Reviews container styling */
  .reviews-container {
    display: flex;
    gap: 20px;
    margin: 0;
    padding: 0;
  }

  /* Review card styling */
  .review-card {
    min-width: calc(20% - 20px); /* Show 4 cards at a time */
    max-width: calc(20% - 20px); /* Ensure 4 cards are shown */
    min-height: 110px; /* Minimum height for consistency */
    height: auto; /* Allow height to adjust based on content */
    background-color: rgba(40, 40, 34, 0.8); /* Dark, transparent background */
    padding: 30px;
    border-radius: 12px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
    color: white; /* Ensure text is visible on dark background */
    display: flex;
    flex-direction: column;
    justify-content: space-between; /* Align review at top and other info at the bottom */
  }

  /* Ensure the bottom content (name, company, date) sticks to the bottom */
  .review-card div {
    margin-top: auto; /* Push the div containing name, company, and date to the bottom */
  }

    /* Animation for scrolling right */
  .scroll-right-show {
    animation: scroll-right-show 50s linear infinite;
    animation-play-state: running; /* Default state is running */
  }

  /* Animation for scrolling left */
  .scroll-left-show {
    animation: scroll-left-show 50s linear infinite;
    animation-play-state: running; /* Default state is running */
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    .review-card {
      min-width: 100%; /* Show 1 card at a time */
      max-width: 100%;
      height: 110px; /* Increase height for mobile for better readability */
    }
      /* Animation for scrolling right */
    .scroll-right-show {
        animation: scroll-right-show 20s linear infinite;
        animation-play-state: running; /* Default state is running */
    }
    /* Animation for scrolling left */
    .scroll-left-show {
        animation: scroll-left-show 20s linear infinite;
        animation-play-state: running; /* Default state is running */
    }
  }



  /* Keyframes for seamless scrolling right */
  @keyframes scroll-right-show {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-100%);
    }
  }

  /* Keyframes for seamless scrolling left */
  @keyframes scroll-left-show {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(0);
    }
  }
</style>